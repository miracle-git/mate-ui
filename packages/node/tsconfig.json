{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["DOM", "ESNext"],
    "types": ["node"],
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": true,
    "allowJs": true,
    "importsNotUsedAsValues": "preserve",
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "locales",
    "scripts",
    "**/__tests__/**/*",
    "docs/dist"
  ]
}
