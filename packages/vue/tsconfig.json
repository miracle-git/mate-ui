{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@mate-ui/vue": ["src/components/index.ts"],
      "@mate-ui/vue/es/*": ["src/components/*"],
      "@mate-ui/vue/lib/*": ["src/components/*"],
      "@mate-ui/vue/locale/*": ["src/components/locales/*"]
    },
    "lib": ["DOM", "ESNext"],
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": true,
    "allowJs": true,
    "importsNotUsedAsValues": "preserve",
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "locales",
    "scripts",
    "**/__tests__/**/*",
    "docs/dist"
  ]
}
